<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-6 mt-3 offset-3">
    <h1>login Wanderlust</h1>
    </div>
    <div class="col-6 mt-3 offset-3">
        <form action="/login" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <lable for="username" class="form-lable">Username</lable>    
                <input type="text" name="username"  id="username" placeholder="Enter username" class="form-control" required>
        
            </div>

            <div class="mb-3">
                <lable for="password" class="form-lable">Password</lable>    
                <input type="password"  id="password" name="password" placeholder="Enter password" class="form-control" required>

            </div>
            <button class="btn btn-dark">Login</button>
        </form>
    </div>
</div>