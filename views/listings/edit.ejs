
<% layout("/layouts/boilerplate") %>
<div class="row mt-2">
    <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form action="/listings/<%= listing._id %>?_method=PATCH" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>  
            <input type="text" name="listing[title]" value=<%= listing.title %> class="form-control" required>
            <div class="valid-feedback">looks good!</div>
        </div>

        <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
            <textarea name="listing[description]" type="text" class="form-control" required><%= listing.description %></textarea>
            <div class="valid-feedback">Description looks good!</div>
        </div>
        
        <div class="mb-3">
           <img src=<%= originalImage %> alt="">
        </div>

        <div class="mb-3">
            <lable for="image" class="form-lable">Upload New Image </lable>
            <input type="file" name="listing[image]" class="form-control" >
        </div>
     <div class="row"> 
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-lable">Price</lable>
            <input type="number" name="listing[price]" value=<%= listing.price %> class="form-control" required>
            <div class="invalid-feedback">Price should be valid</div>
        </div>
        
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-lable">Country</lable>
            <input type="text" name="listing[country]" value=<%= listing.country %> class="form-control" required>
            <div class="invalid-feedback">Country name should be valid</div>
        </div>
    </div>

    <div class="row">
        <div class="mb-3 col-md-8">
            <lable for="location" class="form-lable">Location</lable>
            <input type="text" name="listing[location]" value=<%= listing.location %> class="form-control" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        <div class="mb-3 col-md-4">
            <lable for="category" class="form-lable">Category</lable>
            <select name="listing[category]" id="category"  class="form-control" required>
                <option value=<%= listing.category %>><%= listing.category %></option>
                <option value="Mountains">Mountains</option>
                <option value="Camping">Camping</option>
                <option value="Beach">Beach</option>
                <option value="Deserts">Deserts</option>
                <option value="Rooms">Rooms</option>
                <option value="Farms">Farms</option>
                <option value="Pools">Pools</option>
            </select>
            <div class="invalid-feedback">
                Select your category
               </div>
        </div>

    </div>
        
        <button class="btn btn-edit mt-3">Edit</button> 
    </form>
 </div>
</div>